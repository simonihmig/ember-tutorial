    <label for="author">Author</label>
    {{input value=author class="form-control"}}
  </div>
  <div class="form-group">
    <label for="text">Text</label>
    {{textarea value=text cols="80" rows="6" class="form-control"}}
  </div>
  <button class="btn btn-primary" {{action submit author text}}>Absenden</button>
</form>